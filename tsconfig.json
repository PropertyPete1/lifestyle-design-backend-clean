{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": [
    "server.ts",
    "routes/**/*.ts",
    "services/**/*.ts",
    "models/**/*.ts",
    "utils/**/*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "legacy/**",
    "**/*.test.ts",
    "**/__tests__/**",
    "../**"
  ]
}